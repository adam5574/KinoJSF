<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>menu.xhtml</welcome-file>
    </welcome-file-list>

    <filter>
        <filter-name>SecurityFilter</filter-name>
        <filter-class>security.SecurityFilter</filter-class>
        <init-param>
            <param-name>noPermitionPage</param-name>
            <param-value>/login.xhtml</param-value>
        </init-param>
        <init-param>
            <param-name>permissions</param-name>
            <param-value>
                /javax.faces.resource : PUBLIC;
                /menu.xhtml : PUBLIC;
                /movie.xhtml : PUBLIC;
                /myAcc.xhtml : PUBLIC;
                /login.xhtml : PUBLIC;
                /register.xhtml : PUBLIC;
                /seance.xhtml : PUBLIC;
                /movieAdd.xhtml : PUBLIC;
                /personList.xhtml :worker, admin;
                /moviePanel.xhtml :worker, admin;
                /personEdit.xhtml :worker, admin;
                /seanceAdd.xhtml :worker, admin;

            </param-value>
        </init-param>
        <init-param>
            <param-name>invalidateOnRemoteAddressChange</param-name>
            <param-value>true</param-value>
        </init-param>
        <init-param>
            <param-name>invalidateOnRemoteHostChange</param-name>
            <param-value>false</param-value>
        </init-param>
        <init-param>
            <param-name>invalidateOnRemotePortChange</param-name>
            <param-value>false</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>SecurityFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>